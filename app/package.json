{
  "name": "core-service",
  "version": "1.0.0",
  "description": "Core API service for TradingView data",
  "main": "dist/index.js",
  "scripts": {
    "start": "bun run dist/index.js",
    "dev": "bun --hot src/index.ts",
    "build": "bun tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "load:test": "bun test tests/http-load-test.test.ts",
    "migrate:knex": "knex migrate:latest",
    "migrate:ch": "bun x dotenv -e .env -- sh -c 'clickhouse-migrations migrate --host=$CH_HOST --user=$CH_USER --password=$CH_PASSWORD --migrations-home=./migrations/ch --db=$CH_DB'"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@clickhouse/client": "^1.17.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "@logtape/logtape": "^2.0.2",
    "@logtape/pretty": "^2.0.2",
    "@sinclair/typebox": "^0.34.48",
    "elysia": "1.4.23",
    "envalid": "^8.1.1",
    "jszip": "^3.10.1",
    "knex": "^3.1.0",
    "clickhouse-migrations": "^1.1.2",
    "lru-cache": "^11.2.5",
    "nats": "^2.29.3",
    "node-cron": "^4.2.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/node": "^25.2.2",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "bun-types": "^1.3.9",
    "dotenv-cli": "^11.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "private": true
}
